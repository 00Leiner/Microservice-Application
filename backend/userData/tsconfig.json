{
  "compilerOptions": {
    "target": "ES2022",              // Target latest stable JS features
    "module": "commonjs",            // CommonJS, could be "ESNext" if you're ready to move to ES Modules
    "outDir": "./dist",              // Output directory for compiled code
    "rootDir": "./src",              // Source code directory
    "strict": true,                  // Enable all strict type-checking
    "esModuleInterop": true,         // Allow interoperability between CommonJS and ES Modules
    "moduleResolution": "node",      // Ensure Node.js-like module resolution
    "resolveJsonModule": true,       // Allow importing JSON files
    "skipLibCheck": true             // Skip checking types of libraries in node_modules
  },
  "include": ["src/**/*.ts"],         // Include all .ts files in the src directory
  "exclude": ["node_modules"]         // Exclude node_modules directory
}
